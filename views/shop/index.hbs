
<h3>{{title}}</h3>
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success {{# if noMessages}}hidden{{/if}}">
      {{ successMsg }}
    </div>
  </div>
</div>
{{# each products}}
  <div class="row">
    {{# each this}}
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <img src="{{ this.imagePath }}" alt="Game Win">
        <div class="caption">
          <h3>{{ this.title }}</h3>
          <p class="deecription">{{ this.description }}</p>
          <div class="clearfix">
            <div class="price">
              <span>Giá: </span> 12,000 VND
            </div>
            <a href="#" class="btn btn-primary" role="button">Xem chi tiết</a> 
            <a href="/add-to-cart/{{this._id}}" class="btn btn-default" role="button">Thêm vào giỏ hàng</a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
{{/each}}